# Claude Observability Server Configuration

# Server Configuration
PORT=3001
NODE_ENV=development
HOST=localhost

# Database Configuration
DATABASE_PATH=./data/observability.db
MAX_DATABASE_SIZE=100MB
DATABASE_BACKUP_INTERVAL=24h

# Parent Project Integration (Read-Only)
PARENT_PROJECT_PATH=../../
CLAUDE_CONFIG_PATH=~/.claude
COMMAND_REGISTRY_PATH=../../.claude/config/command-registry.json
SCRIPTS_RESULTS_PATH=../../scripts/results
OUTPUTS_PATH=../../outputs

# WebSocket Configuration
WS_PORT=3002
WS_HEARTBEAT_INTERVAL=30000
MAX_CONNECTIONS=100

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=60000
METRICS_RETENTION_DAYS=90
LOG_LEVEL=info
LOG_ROTATION_SIZE=10MB

# Hook System
HOOKS_ENABLED=true
HOOKS_INSTALL_PATH=~/.claude/settings.json
HOOKS_TIMEOUT=30000

# JSONL Processing
JSONL_WATCH_ENABLED=true
JSONL_PROCESSING_INTERVAL=5000
CONVERSATION_ANALYSIS_DEPTH=1000

# Performance Monitoring
PERFORMANCE_SAMPLING_RATE=1.0
METRICS_AGGREGATION_WINDOW=60000
ANOMALY_DETECTION_ENABLED=true

# Security
CORS_ORIGIN=http://localhost:3000
API_RATE_LIMIT=1000
ENABLE_REQUEST_LOGGING=true

# Features Flags
ENABLE_COST_TRACKING=true
ENABLE_MULTI_AGENT_MONITORING=true
ENABLE_PREDICTIVE_ANALYTICS=false
ENABLE_REAL_TIME_ALERTS=true