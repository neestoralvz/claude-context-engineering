# Production Environment Configuration for Ninu.mx Factory Control System
# CRITICAL: Never commit real production values to version control

# ================================
# Application Configuration
# ================================
NODE_ENV=production
PORT=3000
HOSTNAME=0.0.0.0
NEXT_TELEMETRY_DISABLED=1

# ================================
# Database Configuration
# ================================
DB_HOST=ninu-database
DB_PORT=5432
DB_NAME=ninu_factory_control
DB_USER=ninu_user
DB_PASSWORD=ninu_secure_password_2024
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000
DB_SSL=false

# ================================
# Redis Configuration
# ================================
REDIS_URL=redis://ninu-redis:6379
REDIS_PREFIX=ninu_factory:
REDIS_TTL=3600

# ================================
# WebSocket Configuration
# ================================
WEBSOCKET_PORT=3001
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:3001

# ================================
# Authentication & Security
# ================================
JWT_SECRET=ninu-factory-jwt-secret-key-2024-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# ================================
# Monitoring & Logging
# ================================
LOG_LEVEL=info
LOG_FORMAT=combined
METRICS_ENABLED=true
PROMETHEUS_ENABLED=true

# ================================
# Grafana Configuration
# ================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=ninu_admin_2024

# ================================
# Email Configuration (if needed)
# ================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=notifications@ninu.mx
SMTP_PASS=your-email-password
SMTP_FROM=Ninu Factory System <notifications@ninu.mx>

# ================================
# File Upload Configuration
# ================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ================================
# API Configuration
# ================================
API_RATE_LIMIT=100
API_RATE_WINDOW=900000

# ================================
# Backup Configuration
# ================================
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# ================================
# Timezone Configuration
# ================================
TZ=America/Mexico_City

# ================================
# SSL Configuration
# ================================
SSL_CERT_PATH=/etc/ssl/certs/ninu.crt
SSL_KEY_PATH=/etc/ssl/private/ninu.key

# ================================
# External Services
# ================================
EXTERNAL_API_URL=https://api.ninu.mx
EXTERNAL_API_KEY=your-api-key-here

# ================================
# Feature Flags
# ================================
FEATURE_INVENTORY_REAL_TIME=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_MOBILE_NOTIFICATIONS=true
FEATURE_AUTOMATIC_BACKUPS=true