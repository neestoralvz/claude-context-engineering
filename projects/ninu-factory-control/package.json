{
  "name": "ninu-factory-control",
  "version": "1.0.0",
  "private": true,
  "description": "Factory production control system for Ninu.mx cleaning products manufacturing",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:analyze": "ANALYZE=true npm run build",
    "build:mexico": "NODE_ENV=production MEXICO_OPTIMIZE=true npm run build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "websocket": "node server/websocket.js",
    "dev:full": "concurrently \"npm run dev\" \"npm run websocket\"",
    "cache:analyze": "node scripts/debug-cache.js",
    "cache:report": "node scripts/debug-cache.js --report",
    "cache:clear": "echo 'Open http://localhost:3000/admin/cache to clear browser caches'",
    "build:fresh": "rm -rf .next && npm run build",
    "dev:nocache": "next dev --port 3000",
    "performance:audit": "lighthouse http://localhost:3000 --output=json --output=html --chrome-flags=\"--headless\"",
    "performance:mexico": "node scripts/performance-mexico-audit.js",
    "bundle:analyze": "npm run build:analyze",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:prod": "docker-compose up --build -d",
    "docker:prod:down": "docker-compose down",
    "docker:build": "docker build -t ninu-factory-control .",
    "docker:run": "docker run -p 3000:3000 ninu-factory-control"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie": "^0.6.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/pg": "^8.15.4",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/ws": "^8.5.8",
    "autoprefixer": "^10.4.14",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "cookie": "^0.6.0",
    "date-fns": "^2.30.0",
    "eslint": "^8",
    "eslint-config-next": "14.2.5",
    "jose": "^5.10.0",
    "lucide-react": "^0.263.1",
    "next": "^14.2.30",
    "pg": "^8.16.3",
    "postcss": "^8.4.24",
    "react": "^18",
    "react-dom": "^18",
    "recharts": "^2.8.0",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "tailwind-merge": "^1.14.0",
    "tailwindcss": "^3.3.2",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.2.30",
    "concurrently": "^8.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^11.0.0",
    "webpack-bundle-analyzer": "^4.10.1"
  }
}
