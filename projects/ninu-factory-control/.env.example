# Environment Variables Example for Ninu.mx Factory Control
# Copy this file to .env.local for development

# ================================
# Application Configuration
# ================================
NODE_ENV=development
PORT=3000
HOSTNAME=0.0.0.0

# ================================
# API Configuration
# ================================
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:8080
NEXT_PUBLIC_ENV=development

# ================================
# Database Configuration
# ================================
DATABASE_URL=postgresql://ninu_user:ninu_password@localhost:5432/ninu_factory
POSTGRES_DB=ninu_factory
POSTGRES_USER=ninu_user
POSTGRES_PASSWORD=ninu_password

# ================================
# Redis Configuration
# ================================
REDIS_URL=redis://localhost:6379

# ================================
# Security Configuration
# ================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-256-bits-minimum
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key-change-this-in-production

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
ALLOWED_HOSTS=localhost,127.0.0.1,factory.ninu.mx

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# WebSocket Security
WS_PING_TIMEOUT=60000
WS_PING_INTERVAL=25000
WS_MAX_CONNECTIONS_PER_IP=5
WS_AUTH_REQUIRED=true

# Security Headers
CSP_REPORT_URI=/api/csp-report
HSTS_MAX_AGE=31536000
FORCE_HTTPS=false

# Session Configuration
SESSION_MAX_AGE=28800000
SESSION_SECURE=false
SESSION_SAME_SITE=strict
SESSION_HTTP_ONLY=true

# Authentication
AUTH_TOKEN_EXPIRY=8h
REFRESH_TOKEN_EXPIRY=7d
PASSWORD_MIN_LENGTH=8
FAILED_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000

# ================================
# External Services (Future)
# ================================
# Email service for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ================================
# Monitoring (Optional)
# ================================
SENTRY_DSN=your-sentry-dsn-for-error-tracking
ANALYTICS_ID=your-analytics-id

# ================================
# Factory-Specific Configuration
# ================================
# Reactor configuration
MAX_REACTOR_TEMPERATURE=100
MIN_REACTOR_PRESSURE=0.5
MAX_BATCH_SIZE=5000

# Quality control thresholds
QUALITY_THRESHOLD=95
EFFICIENCY_TARGET=85
MAX_DOWNTIME_PERCENT=5

# ================================
# Docker-specific (for docker-compose)
# ================================
COMPOSE_PROJECT_NAME=ninu-factory-control